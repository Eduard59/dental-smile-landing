<style>
  .gallery-container {
    overflow: hidden;
  }

  .gallery-wrapper {
    overflow: hidden;
    position: relative;
  }

  .gallery-track {
    display: flex;
    gap: 20px;
    animation: scroll 40s linear infinite;
    width: fit-content;
  }

  .gallery-track:hover {
    animation-play-state: paused;
  }

  .gallery-item {
    flex-shrink: 0;
    width: 200px;
    height: 300px;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    transition: transform 0.3s ease;
    background: #f3f4f6;
  }

  .gallery-item:hover {
    transform: scale(1.05);
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Mobile responsive */
  @media (max-width: 640px) {
    .gallery-item {
      width: 150px;
      height: 220px;
    }

    .gallery-container {
      padding: 30px 0;
    }
  }

  /* Tablet responsive */
  @media (min-width: 641px) and (max-width: 1024px) {
    .gallery-item {
      width: 180px;
      height: 270px;
    }
  }
</style>
