  .feature-expanded {
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .feature-card {
    position: relative;
  }

  .feature-card.active {
    background: #f0f9ff;
    border: 2px solid #3197ff;
  }

  .feature-card.active .expand-arrow {
    transform: rotate(180deg);
  }

  .feature-card .absolute {
    animation: pulse-badge 2s ease-in-out infinite;
  }

  @keyframes pulse-badge {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const featureCards = document.querySelectorAll('.feature-card');

    featureCards.forEach(card => {
      card.addEventListener('click', () => {
        const expandedContent = card.querySelector('.feature-expanded');

        if (!expandedContent) return;

        const isActive = card.classList.contains('active');

        // Close all other cards
        featureCards.forEach(otherCard => {
          const otherExpanded = otherCard.querySelector('.feature-expanded');
          if (otherExpanded && otherCard !== card) {
            otherExpanded.style.display = 'none';
            otherCard.classList.remove('active');
          }
        });

        // Toggle current card
        if (isActive) {
          expandedContent.style.display = 'none';
          card.classList.remove('active');
        } else {
          expandedContent.style.display = 'block';
          card.classList.add('active');

          // Scroll card into view on mobile
          setTimeout(() => {
            card.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
          }, 100);
        }
      });
    });
  });
</script>
