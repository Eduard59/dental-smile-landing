<style>
  .widget-container {
    transition: box-shadow 0.3s ease;
  }

  .widget-container:hover {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
  }

  @media (max-width: 768px) {
    .widget-container iframe {
      height: 1000px;
    }
  }
</style>
