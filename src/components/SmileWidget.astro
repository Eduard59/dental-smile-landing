<section class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-blue-50 to-white">
  <div class="max-w-5xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-10">
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
        See Your New Smile
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Upload your photo and preview your smile transformation with our AI-powered tool
      </p>
    </div>

    <!-- Widget Container -->
    <div class="widget-container rounded-2xl overflow-hidden shadow-2xl bg-white">
      <iframe
        src="https://smile.dentalprice.ai/?key=5B5MoKtBxy2Pds5ClVWwpITmAFE3vQ0kLm92d3cCj7w"
        width="100%"
        height="1200"
        frameborder="0"
        style="border-radius: 12px;"
        title="Smile Transformation Widget"
        loading="lazy"
      ></iframe>
    </div>
  </div>
