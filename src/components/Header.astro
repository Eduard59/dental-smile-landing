---
// Header component with sticky navigation and blurred background
---

<style>
  .header-scrolled {
    background-color: rgba(146, 147, 147, 0.3);
  }

  .logo-img {
    height: 40px;
    width: auto;
    transition: all 0.3s ease;
  }

  @media (min-width: 640px) {
    .logo-img {
      height: 50px;
    }
  }

  .logo-img:hover {
    transform: scale(1.05);
  }

  .nav-link {
    position: relative;
    padding-right: 2rem;
  }

  .nav-link:not(:last-child)::after {
    content: '|';
    position: absolute;
    right: 1rem;
    color: #d1d5db;
  }

  /* Mobile menu animation */
  #mobile-menu {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-in-out;
    background-color: white;
    margin: 0 -1rem;
    padding: 0 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  #mobile-menu.open {
    max-height: 500px;
    padding-top: 1rem;
  }

  /* Icon positioning */
  #mobile-menu-button svg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
</style>

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="header">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 sm:h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="#" class="block">
          <img
            src="/images/logos/logo_1.png"
            alt="Dental Smile"
            class="logo-img"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center">
        <a href="#cost" class="nav-link text-gray-700 hover:text-blue-500 transition-colors font-medium">
          Cost
        </a>
        <a href="#features" class="nav-link text-gray-700 hover:text-blue-500 transition-colors font-medium">
          Financing
        </a>
        <a href="#insurance" class="nav-link text-gray-700 hover:text-blue-500 transition-colors font-medium">
          Insurance
        </a>
        <a href="#doctor" class="nav-link text-gray-700 hover:text-blue-500 transition-colors font-medium">
          Doctor
        </a>
        <a href="#testimonials" class="nav-link text-gray-700 hover:text-blue-500 transition-colors font-medium">
          Reviews
        </a>
        <a href="#faq" class="nav-link text-gray-700 hover:text-blue-500 transition-colors font-medium">
          FAQ
        </a>
        <a href="#contact" class="nav-link text-gray-700 hover:text-blue-500 transition-colors font-medium">
          Location
        </a>
        <a
          href="tel:+19162822423"
          class="ml-8 bg-blue-500 text-white px-6 py-2 rounded-full hover:bg-blue-600 transition-all duration-300 hover:shadow-lg flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          (916) 282-2423
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors relative z-50"
        aria-label="Toggle menu"
      >
        <svg id="burger-icon" class="w-6 h-6 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden pb-4">
      <div class="flex flex-col space-y-3">
        <a href="#cost" class="text-gray-700 hover:text-blue-500 transition-colors font-medium py-2">
          Cost
        </a>
        <a href="#features" class="text-gray-700 hover:text-blue-500 transition-colors font-medium py-2">
          Financing
        </a>
        <a href="#insurance" class="text-gray-700 hover:text-blue-500 transition-colors font-medium py-2">
          Insurance
        </a>
        <a href="#doctor" class="text-gray-700 hover:text-blue-500 transition-colors font-medium py-2">
          Doctor
        </a>
        <a href="#testimonials" class="text-gray-700 hover:text-blue-500 transition-colors font-medium py-2">
          Reviews
        </a>
        <a href="#faq" class="text-gray-700 hover:text-blue-500 transition-colors font-medium py-2">
          FAQ
        </a>
        <a href="#contact" class="text-gray-700 hover:text-blue-500 transition-colors font-medium py-2">
          Location
        </a>
        <a
          href="tel:+19162822423"
          class="bg-blue-500 text-white px-6 py-2 rounded-full hover:bg-blue-600 transition-all text-center flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          (916) 282-2423
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Sticky header with blur effect
  const header = document.getElementById('header');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 20) {
      header?.classList.add('header-scrolled', 'backdrop-blur-md', 'shadow-sm');
    } else {
      header?.classList.remove('header-scrolled', 'backdrop-blur-md', 'shadow-sm');
    }
  });

  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const burgerIcon = document.getElementById('burger-icon');
  const closeIcon = document.getElementById('close-icon');

  mobileMenuButton?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.contains('open');

    if (isOpen) {
      // Close menu
      mobileMenu?.classList.remove('open');
      burgerIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    } else {
      // Open menu
      mobileMenu?.classList.add('open');
      burgerIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
    }
  });

  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.remove('open');
      burgerIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    });
  });
</script>
