<style>
  .doctor-card.active {
    background: #f0f9ff;
    border: 2px solid #3b82f6;
  }

  .doctor-card.active .expand-arrow {
    transform: rotate(180deg);
  }

  .card-expanded {
    overflow: hidden;
    transition: all 0.3s ease;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.doctor-card');

    cards.forEach(card => {
      card.addEventListener('click', () => {
        const expandedContent = card.querySelector('.card-expanded');
        const isActive = card.classList.contains('active');

        // Close all other cards
        cards.forEach(otherCard => {
          const otherExpanded = otherCard.querySelector('.card-expanded');
          if (otherExpanded && otherCard !== card) {
            otherExpanded.style.display = 'none';
            otherCard.classList.remove('active');
          }
        });

        // Toggle current card
        if (isActive) {
          expandedContent.style.display = 'none';
          card.classList.remove('active');
        } else {
          expandedContent.style.display = 'block';
          card.classList.add('active');
        }
      });
    });
  });
</script>
